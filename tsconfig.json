{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/content/*": ["./content/*"],
      "@/shared": ["./src/foundation/shared"],
      "@/shared/*": ["./src/foundation/shared/*"],
      "@/entities": ["./src/foundation/entities"],
      "@/entities/*": ["./src/foundation/entities/*"],
      "@/features": ["./src/foundation/features"],
      "@/features/*": ["./src/foundation/features/*"],
      "@/widgets": ["./src/foundation/widgets"],
      "@/widgets/*": ["./src/foundation/widgets/*"],
      "@/pages": ["./src/foundation/pages"],
      "@/pages/*": ["./src/foundation/pages/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": ["node_modules"]
}
